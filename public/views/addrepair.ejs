<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AutoShop</title>
    <link rel="shortcut icon" href="./picture/logo.png" type="image/png">
    <link rel="stylesheet" href="/css/addrepair.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">  
</head>
  <body>
    <%- include('nav.ejs', {addpart: addpart, addcustomer: addcustomer, addsupplier: addsupplier, addrepair: addrepair}) -%>;
    <div class="mainmainbox">
        <div class="mainbox">
          <h1>Add Repair</h1>
            <div class="secondbox">
                <div>
                  <% if (check) { %>
                    <div class="fail">
                      <p>Please enter the customer name correctly or enter the product name correctly.</p>
                    </div>
                  <% } %>
                    <form method="post" action="/addrepair">
                        <label for="">Customer <span>(ชื่อลูกค้า)</span> </label>
                        <div class="serch-customer">
                          <div class="row">
                            <input type="text" name="customer" id="input-customer">
                          </div>
                        </div>
                        <div class="result-customer"></div>

                        <label for="">Spare <span>(ชื่อสินค้า)</span></label>
                        <div class="serch-spare">
                          <div class="row">
                            <input type="text" name="spare" id="input-spare">
                          </div>
                        </div>
                        <div class="result-spare"></div>

                        <label for="">mechanicName</label>
                        <input type="text" name="mechanic" id="">
                        <input type="submit" value="Submit"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <video autoplay muted loop src="./picture/move.mp4" type="video/mp4"></video>
    <script>
      const data_cm = <%- JSON.stringify(data_cm) %>;
      const data_sp = <%- JSON.stringify(data_sp) %>; 
    </script>
    <script src="/autorepair.js"></script>
  </body>
</html>

