<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AutoShop</title>
    <link rel="shortcut icon" href="../picture/logo.png" type="image/png">
    <link rel="stylesheet" href="/css/repairinfo.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('nav.ejs', {addpart: addpart, addcustomer: addcustomer, addsupplier: addsupplier, addrepair: addrepair}) -%>;
    <div class="mainmainbox">
        <div class="mainbox">
          <h1>Customers</h1>
            <div class="secondbox">
              <div>
                <% 
                  let customerID = null;
                  if (cm_one.customerID  < 10) customerID = '000' + cm_one.customerID ;
                  else if (cm_one.customerID  < 100) customerID = '00' + cm_one.customerID ;
                  else if (cm_one.customerID  < 1000) customerID = '0' + cm_one.customerID ;
                  else customerID = cm_one.customerID ;
                %> 
                <p>CustomerID: <%= customerID %></p>
                <p>Name: <%= cm_one.name %></p>
                <p>Address: <%= cm_one.address %></p>
                <p>Phone Number: <%= cm_one.phonenumber %></p>
                <p>CarCode: <%= cm_one.carcode %></p>
                <a href="/customers">Back</a>
              </div>
            </div>
        </div>
    </div>
    <video autoplay muted loop src="../picture/move.mp4" type="video/mp4"></video>
  </body>
</html>

