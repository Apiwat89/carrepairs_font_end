<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AutoShop</title>
    <link rel="shortcut icon" href="../picture/logo.png" type="image/png">
    <link rel="stylesheet" href="/css/repairinfo.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('nav.ejs', {addpart: addpart, addcustomer: addcustomer, addsupplier: addsupplier, addrepair: addrepair}) -%>;
    <div class="mainmainbox">
        <div class="mainbox">
          <h1>Supplier</h1>
            <div class="secondbox">
              <div>
                <% 
                  let supplierID = null;
                  if (spl_one.supplierID < 10) supplierID = '00' + spl_one.supplierID;
                  else if (spl_one.supplierID < 100) supplierID = '0' + spl_one.supplierID;
                  else supplierID = spl_one.supplierID;
                %> 
                <p>SupplierID: <%= supplierID %></p>
                <p>Name: <%= spl_one.name %></p>
                <p>PhoneNumber: <%= spl_one.phonenumber %></p>
                <p>Address: <%= spl_one.address %></p>
                <a href="/supplier">Back</a>
              </div>
            </div>
        </div>
    </div>
    <video autoplay muted loop src="/picture/move.mp4" type="video/mp4"></video>
  </body>
</html>

